{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "typescript.format.enable": false,
  "javascript.format.enable": false,

  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  }
}
